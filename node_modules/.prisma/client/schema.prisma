datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int         @id @default(autoincrement())
  uuid       String
  email      String      @unique
  name       String
  birth_date DateTime
  password   String
  facebookId String?     @unique
  profiles   Profile[]
  userTokens UserToken[]
  createdAt  DateTime    @default(now())
  updatedAt  DateTime    @updatedAt

  @@map("users")
}

model Profile {
  id                    Int                    @id @default(autoincrement())
  uuid                  String
  name                  String
  user                  User                   @relation(fields: [userId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  userId                Int
  profileMovieFavorites ProfileMovieFavorite[]
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt

  @@map("profiles")
}

model ProfileMovieFavorite {
  id        Int      @id @default(autoincrement())
  profile   Profile  @relation(fields: [profileId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  profileId Int
  tmdbId    Int // O ID do filme na API externa
  watched   Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([profileId, tmdbId])
  @@map("profile_movie_favorite")
}

model UserToken {
  id        Int      @id @default(autoincrement())
  user      User     @relation(fields: [userId], references: [id])
  userId    Int
  token     String   @unique
  createdAt DateTime @default(now())
  expiresAt DateTime
  updatedAt DateTime @updatedAt

  @@map("user_token")
}

