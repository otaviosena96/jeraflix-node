datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id         Int       @id @default(autoincrement())
  uuid       String
  email      String    @unique
  name       String
  birth_date DateTime
  password   String
  facebookId String?   @unique
  profiles   Profile[]
  createdAt  DateTime  @default(now())
  updatedAt  DateTime  @updatedAt

  @@map("users")
}

model Profile {
  id                    Int                    @id @default(autoincrement())
  uuid                  String
  name                  String
  user                  User                   @relation(fields: [user_id], references: [id], onUpdate: Cascade, onDelete: Cascade)
  user_id               Int
  color                 String
  profileMovieFavorites ProfileMovieFavorite[]
  createdAt             DateTime               @default(now())
  updatedAt             DateTime               @updatedAt

  @@map("profiles")
}

model ProfileMovieFavorite {
  id        Int      @id @default(autoincrement())
  profile   Profile  @relation(fields: [profileId], references: [id], onUpdate: Cascade, onDelete: Cascade)
  profileId Int
  tmdbId    Int // O ID do filme na API externa
  label     String
  watched   Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([profileId, tmdbId])
  @@map("profile_movie_favorite")
}

