{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "types": ["node", "reflect-metadata"],    
  },
  "include": ["src/**/*.ts","src/**/*.ts", "src/**/*.d.ts"],
  "exclude": ["node_modules"]
}
